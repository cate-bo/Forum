<Window x:Class="Forum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forum"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid Name="grd_main">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Command="{Binding GoHome}">
            <Image Source="C:\Users\cate\source\repos\Forum\Forum\Views\Assets\logo_standard.png"/>
        </Button>
        <Button Name="userButtonThing" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="250" Command="{Binding OpenPopupButtonPressed}">
            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="60">
                <Popup x:Name="popupthing" IsOpen="{Binding IsPopupOpen}" Width="250" Placement="Bottom" StaysOpen="False">
                </Popup>
                <TextBlock Name="LoginDisplay" VerticalAlignment="Center"/>
            </Grid>
        </Button>
    </Grid>
</Window>
